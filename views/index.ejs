            <div class="modal-footer">
              <%
              elem.buttons.forEach((bt)=> {
                let classStr = bt.big? "btn btn-primary btn-lg" : "btn btn-default";
                %>
                <button class="<%=classStr%>" onclick="window.open('<%=bt.goTo%>');" type = "button"><%=bt.name%></button>
